---
import Layout from '../layouts/Layout.astro';
import EventForm from '../components/EventForm';
---

<Layout title="イベントスケジュール管理">
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-bold text-center mb-8 text-gray-800">
        イベントスケジュール管理
      </h1>
      <div class="bg-white rounded-lg shadow-lg p-6">
        <EventForm client:load />
      </div>
      <div id="schedule-output" class="mt-8 bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-semibold mb-4 text-gray-800">生成されたスケジュール</h2>
        <div id="schedule-content" class="prose max-w-none">
          <!-- Generated schedule will be displayed here -->
        </div>
      </div>
    </div>
  </main>
</Layout>